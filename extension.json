{
	"identifier": "onecrayon.Handy",
	"name": "Handy",
	"organization": "One Crayon",
	"description": "Keeping your fingers on your keyboard.",
	"version": "1.0.0",
	"categories": ["commands", "clips"],
	"bugs": "https://github.com/onecrayon/Handy.novaextension/issues",

	"main": "main.js",

	"commands": {
		"editor": [
			{
				"title": "Align Assignments",
				"command": "handy.alignAssignments",
				"shortcut": "cmd-opt-a",
				"when": "editorHasFocus && editorHasSelection"
			},

			{
				"title": "Numbers",
				"command": "handy.noop",
				"when": "editorHasFocus && !editorHasFocus"
			},
			{
				"title": "Calculate...",
				"command": "handy.calculateNumbers",
				"shortcut": "ctrl-=",
				"when": "editorHasFocus"
			},
			{
				"title": "Increment +1",
				"command": "handy.incrementIntegers",
				"shortcut": "ctrl-opt-up",
				"when": "editorHasFocus"
			},
			{
				"title": "Increment +10",
				"command": "handy.incrementIntegersTen",
				"shortcut": "ctrl-opt-shift-up",
				"when": "editorHasFocus"
			},
			{
				"title": "Decrement -1",
				"command": "handy.decrementIntegers",
				"shortcut": "ctrl-opt-down",
				"when": "editorHasFocus"
			},
			{
				"title": "Decrement -10",
				"command": "handy.decrementIntegersTen",
				"shortcut": "ctrl-opt-shift-down",
				"when": "editorHasFocus"
			},

			{
				"title": "Selections",
				"command": "handy.noop",
				"when": "editorHasFocus && !editorHasFocus"
			},
			{
				"title": "Broaden Selection",
				"command": "handy.broadenSelection",
				"shortcut": "ctrl-b",
				"when": "editorHasFocus"
			},
			{
				"title": "Select Line Contents",
				"command": "handy.selectLineContents",
				"shortcut": "cmd-opt-l",
				"when": "editorHasFocus"
			}
		]
	}
}
